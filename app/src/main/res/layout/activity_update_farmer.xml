<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yogeshborhade.shaktidevelopers.HomePageFolder.ProjectFarmer.Update_Farmer">


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorBlue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Farmer Details"
            android:textColor="@color/white"
            android:textSize="@dimen/text20"
            android:textStyle="bold" />


        <Button
            android:id="@+id/mbackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:drawable/alert_light_frame"
            android:text="back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Margin10"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project ID"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text15"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/mtextProjectId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project ID"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Margin10"
                android:text="Farmer ID"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mtextFarmerID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farmer ID"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text12" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_Plot_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Margin10"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Farmer Name"
                    android:inputType="text"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_Plot_total_size"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerAdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Adress"
                    android:inputType="textPostalAddress"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Margin10"
                android:text="Update Birth Date"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text15"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/Margin10"
                android:layout_weight="4"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mimgFarmerDobDatePicker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:src="@drawable/date_picker"
                    android:text="add Date" />


                <TextView
                    android:id="@+id/mtextFarmerDobDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/mimgFarmerDobDatePicker"
                    android:gravity="center"
                    android:text="Please Select Date Of Birth"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/medtFarmerAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Age"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Margin10"
                android:layout_weight="2"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/medtFarmerPanCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pan Card Number"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text12" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/mAddPanCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/new_button_blue"
                    android:text="Add/View Pan Card"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerAdharCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adhar Card Number"
                    android:inputType="number"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_Pan_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerBuyingPlotID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Register Plot Id"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerEestSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plot East Size"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerWestSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plot West Size"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerNorthSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plot North Size"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_Plot_south"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerSouthSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plot South Size"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerTotalBuyingArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Farmer Total Selling Area"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerRatePerSqurefoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rate per Squre foot"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerTotalAmountToBePaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Farmer Total Amount To be paid"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Margin10"
                android:background="@drawable/extra_rounded_corner_white"
                android:orientation="vertical"
                android:padding="@dimen/Margin10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Margin10"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Given Amount"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Remaining Amount"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/medtFarmerAmoutRescieved"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_margin="@dimen/Margin10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="@dimen/text12" />

                    <EditText
                        android:id="@+id/medtFarmerPendingAmount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/Margin10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text12" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Margin10"
                android:background="@drawable/extra_rounded_corner_white"
                android:orientation="vertical"

                android:padding="@dimen/Margin10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Payment Mode"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text15"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_expence_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/expence_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mode Number"
                        android:inputType="number"

                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="@dimen/text15"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/extra_rounded_corner_white"
                android:orientation="horizontal"
                android:padding="@dimen/Margin10"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/Margin10"
                        android:gravity="center"
                        android:text="Amount Given Date"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/Margin10"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mimgFarmerAmountRescievdDatePicker"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_weight="1"
                            android:src="@drawable/date_picker"
                            android:text="add Date" />


                        <TextView
                            android:id="@+id/mtextFarmerFarmerAmountRescievd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/mimgFarmerAmountRescievdDatePicker"
                            android:gravity="center"
                            android:text="Please Amount Given Date"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/Margin10"
                        android:gravity="center"
                        android:text="Next Commitment Date"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/Margin10"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mimgFarmerPendingAmountDatePicker"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_weight="1"
                            android:src="@drawable/date_picker"
                            android:text="add Date" />


                        <TextView
                            android:id="@+id/mtextFarmerFarmerPendingAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/mimgFarmerPendingAmountDatePicker"
                            android:gravity="center"
                            android:text="Please Pending Amount Commitment Date"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Margin10"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerOtherCharges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other Charges"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent"
                android:visibility="gone">

                <EditText
                    android:id="@+id/medtFarmerNotificationRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter  Notification"
                    android:inputType="text"
                    android:maxLength="1000"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/Margin10"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/mimgFarmerNotificationRemarkDatePicker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:src="@drawable/date_picker"
                    android:text="add Date" />


                <TextView
                    android:id="@+id/mtextFarmerFarmerRemarkDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/mimgFarmerNotificationRemarkDatePicker"
                    android:gravity="center"
                    android:text="Please Enter Notification Date"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/medtFarmerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Status"
                    android:inputType="text"
                    android:maxLength="1000"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text12" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/Margin30"
                android:layout_marginTop="@dimen/Margin10"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mUpdate"
                    android:layout_width="@dimen/buttonWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/Margin5"
                    android:layout_marginRight="@dimen/Margin5"
                    android:layout_weight="1"
                    android:background="@drawable/new_button_blue"
                    android:gravity="center"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text12"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/mDelete"
                    android:layout_width="@dimen/buttonWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/Margin5"
                    android:layout_marginRight="@dimen/Margin5"
                    android:layout_weight="1"
                    android:background="@drawable/new_button_blue"
                    android:gravity="center"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text12"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
