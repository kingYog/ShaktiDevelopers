<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mllMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/Margin10"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/Margin20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification ID:- "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mtextNotids"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification Title"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text20" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date :-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mtextDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification Title"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Title :-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mtextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification Title"
                    android:textColor="@color/colorAccent"

                    android:textSize="@dimen/text20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Description :-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mtextDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification Desc"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification From:- "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mtextNotfrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification Title"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text20" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mdelete_Notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/new_color_Shade2"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/Margin30"
                android:layout_height="@dimen/Margin30"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:src="@drawable/icon_delete" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/Margin5"
        android:background="@color/colorBlue"></View>
</LinearLayout>