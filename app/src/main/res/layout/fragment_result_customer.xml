<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/Margin10"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/Margin20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/extra_rounded_corner_white"
                android:orientation="vertical"
                android:padding="@dimen/Margin10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text20"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Amount To Be Rescieved"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text12" />

                    <TextView
                        android:id="@+id/mtextCustomerTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="001246"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Amount Rescieved"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text12" />

                    <TextView
                        android:id="@+id/mtextCustomerRescived"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="001246"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Rescieved Pending"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text12" />

                    <TextView
                        android:id="@+id/mtextCustomerRemaining"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="001246"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>



            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/Margin10" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>