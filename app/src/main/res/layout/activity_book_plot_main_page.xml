<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yogeshborhade.shaktidevelopers.HomePageFolder.ProjectPlot.BookPlotMainPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorBlue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Book Plot"
                android:textColor="@color/white"
                android:textSize="@dimen/text20"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mbackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:drawable/alert_light_frame"
                android:text="back" />

        </RelativeLayout>

        <TextView
            android:id="@+id/mAddNewCustomerTothisPlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Margin10"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="@dimen/Margin10"
            android:text="+ Add New Customer To This Plot"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text20"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl1"
            android:layout_marginTop="@dimen/Margin10"
            android:scrollbars="vertical" />

    </LinearLayout>
</RelativeLayout>
