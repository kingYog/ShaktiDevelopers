<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowmainLayour"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/Margin10"
    android:background="@android:drawable/alert_light_frame"
    android:orientation="vertical"
    android:padding="@dimen/Margin20">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margin10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="SR.NO "
            android:textColor="@color/colorPrimary"

            android:textSize="@dimen/text12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtextSRNO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margin10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Customer Name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtextCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="900"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margin10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Book ID"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtextBookID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="900"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margin10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Plot ID"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtextPlotId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="900"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margin10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Customer ID"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mtextCustomerID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="900"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text12"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>